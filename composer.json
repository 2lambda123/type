{
    "name": "php-extended-type-system/type",
    "description": "PHP Extended Type System Types",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PHP\\ExtendedTypeSystem\\Type\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHP\\ExtendedTypeSystem\\Type\\": "tests/"
        },
        "files": [
            "tests/functions.php"
        ]
    },
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14.4",
        "phpyh/coding-standard": "^2.0.0",
        "vimeo/psalm": "^5.7.7"
    },
    "scripts": {
        "var": "mkdir -p var",
        "fixcs": ["@var", "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix -v"],
        "psalm": ["@var", "vendor/bin/psalm --show-info"],
        "cleanup": "rm -rf ./var/"
    },
    "config": {
        "sort-packages": true
    }
}
